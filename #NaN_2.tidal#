-- NaN gig at Kunstplantage Zwickau
-- 2022-08-26 -> harte_echtzeit

-- part two (mainly gravitational waves)

--some GRAVITATIONAL WAVE stuff

--- we need a synth line here!
-- dance
d1 $ sometimes ((jux rev). (# pan (fast 16 $ sine)))
  $ s ("gw_cut:2(5,16)" <> "gw_cut:3(11,16)")
  -- n "[2(8,16). 3(8,16)]"
  -- # s "gw_cut"
  # speed "[-23 -20 -26]"
  # shape "0.2 0.5 0.2"
  # squiz "5 2 4"
  # gain "0.3 0.5 0.8"
  # waveloss "30..69"

 -- use the same beat as in ambient here more prominent
  -- dark dance
d2 $ off 0.3 ((# speed "0.5") . (# room 0.4 # sz 0.3))
  $ n "5!2 3!2"
  # s "gw_cut"
  # speed 0.6
  # smear 4
  # shape 0.5
  # gain 0.6


-- introdce more stranger sounds after a few minutes -- gets dense


-- beat the drum (drum like sounds are samples 5-7 + 9)
d3 $ n "6(9,16)"
  # s "gw_cut"
  # speed "-1.7 1.55 -1.6"
  # squiz "1 5 1"
  # shape 0.6
  # gain 0.3
  


-- now back to percussions? --> kind of
-- may use for a second experimental track!
d4 $ fast "2" $ jux rev
  $ sometimes (superimpose ((# comb "0.1 0.3") . (# crush 3))) $ n "1 2 [3 4 3?] 4"
  <| s "gw_cut"
  # bpf "200 1200"
  -- # hpf 800
  # gain 0.8
  # shape "0.1 0.3 0.6 0.3"
  # crush "2 4"
  # speed "-1.2"
  # legato 12
  # djf "0.3 0.4 0.1 0.5"

hush





